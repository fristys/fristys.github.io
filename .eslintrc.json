{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": ["prettier", "prettier/vue", "plugin:vue/recommended"],
  "rules": {
    "vue/max-attributes-per-line": "off",
    "vue/html-self-closing": "off",
    "vue/no-v-html": "off"
  }
}
